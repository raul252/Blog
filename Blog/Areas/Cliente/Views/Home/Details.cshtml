@model Blog.Models.Articulo
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-light m-lg-0 row container">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.Name</h4>
            </div>
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.CreatedAt</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                @if (Model.UrlImage != null)
                {
                    <img src="/@Url.Content( Model.UrlImage )" class="img-thumbnail mx-auto d-block" />
                }
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-12 col-md-6 pb-1">
                <a asp-action="Index" class="btn btn-success btn-sm">Volver a lista</a>
            </div>
        </div>
    </div>
</div>