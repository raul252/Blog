
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Artículos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"> Crear nuevo Artículo</i></a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Fecha Creación
                </th>
                <th>

                </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/articulo.js"></script>
}
